{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "@medusajs/ui": ["./index.tsx"],
      "@/components/*": ["./components/*"],
      "@/providers/*": ["./providers/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "storybook-static",
    "node_modules",
    "dist",
    "build",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.ts",
    "src/**/*.stories.mdx"
  ]
}
